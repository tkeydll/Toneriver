<h1>Listing items</h1>

<table border>
  <tr>
    <th>No</th>
    <th>Name</th>
    <th>Image</th>
    <th>Unit price</th>
    <th>Description</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.no %></td>
    <td><%= item.name %></td>
    <td><%= item.image %></td>
    <td><%= item.unit_price %></td>
    <td><%= item.description %></td>
    <td><%= item.quantity %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

